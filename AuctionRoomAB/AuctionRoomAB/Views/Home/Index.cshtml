@{
    ViewBag.Title = "Home";
}


<div class="container theme-showcase" role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h1>Live Auctions</h1>
        <p>Welcome to our online platform where you can bid <strong>live</strong> on items from the Auction Room.</p>
        <p>
            @if (!Request.IsAuthenticated)
            {
                <p>To start bidding, you will need to first create an account.</p>
                <button type="button" id="signup-main" class="btn btn-primary btn-lg">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;Sign up now
                </button>
            }
            else
            {
                <p>Hello, @User.Identity.Name! You can now bid.</p>
                <button type="button" id="signup-main" class="btn btn-success btn-lg">
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>&nbsp;Start bidding
                </button>
            }
        </p>
    </div>
</div>

